{
  "name": "@feup-infolab/docker-mocha",
  "version": "0.0.18",
  "description": "Running mocha tests in isolated, parallel and cached environments",
  "keywords": [
    "docker",
    "mocha",
    "networks",
    "isolated",
    "parallel",
    "tests",
    "cached",
    "end-to-end",
    "serices",
    "micro-services",
    "distributed"
  ],
  "repository": "https://github.com/feup-infolab/docker-mocha",
  "author": "nuno.neto",
  "license": "BSD-3-Clause",
  "main": "docker-mocha-run.js",
  "dependencies": {
    "async": "^2.6.2",
    "better-queue": "^3.8.10",
    "export-to-csv": "^0.2.1",
    "js-yaml": "^3.12.2",
    "request": "^2.88.0",
    "underscore": "^1.9.1",
    "yargs": "^13.2.2",
    "mocha": "^6.1.4"
  },
  "devDependencies": {
    "codacy-coverage": "^3.4.0",
    "nyc": "^13.3.0"
  },
  "scripts": {
    "test": "docker rmi -f nuno/node-currency:latest; node ./docker-mocha-run.js -f ./test/test/tests.json -t 1 -c ./test/docker-compose.yml -e dendro -p 3000 --config docker_mocha",
    "testing": "node ./docker-mocha-run.js --testing",
    "setuping": "node ./docker-mocha-run.js --setuping",
    "coverage": "nyc --temp-directory=coverage --reporter=lcov npm test",
    "report-coverage": "node ./node_modules/.bin/codacy-coverage < ./coverage/lcov.info"
  },
  "bin": {
    "docker-mocha": "./docker-mocha-run.js",
    "docker-mocha-graph": "./src/graph.py"
  }
}

{
  "name": "@feup-infolab/docker-mocha",
  "version": "0.0.15",
  "description": "Running mocha tests in isolated, parallel and cached environments",
  "keywords": [
    "docker",
    "mocha",
    "networks",
    "isolated",
    "parallel",
    "tests",
    "cached",
    "end-to-end",
    "serices",
    "micro-services",
    "distributed"
  ],
  "repository": "https://github.com/feup-infolab/docker-mocha",
  "author": "nuno.neto",
  "license": "BSD-3-Clause",
  "main": "src/RunSetup.js",
  "dependencies": {
    "async": "^2.6.2",
    "better-queue": "^3.8.10",
    "export-to-csv": "^0.2.1",
    "js-yaml": "^3.12.2",
    "request": "^2.88.0",
    "underscore": "^1.9.1",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "nyc": "^13.3.0",
    "codacy-coverage": "^3.4.0"
  },
  "scripts": {
    "test": "cp docker-mocha-run.js ./test/docker-mocha-run.js && cp src/* ./test/src && node ./docker-mocha-run.js -f ./test/test/tests.json -t 2 -c ./test/docker-compose.yml -e dendro -p 3000 --no-delete --config docker_mocha",
    "coverage": "nyc --temp-directory=coverage --reporter=lcov npm test",
    "report-coverage": "node ./node_modules/.bin/codacy-coverage < ./coverage/lcov.info"
  },
  "bin": {
    "docker-mocha": "./docker-mocha-run.js",
    "docker-mocha-graph": "./src/graph.py"
  }
}
